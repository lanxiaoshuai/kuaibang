<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
      <RelativeLayout
          android:id="@+id/hide_display_pop"
          android:background="@drawable/miaobian_biankuan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center">
          <ImageView
              android:id="@+id/hide_display_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/hidden_task"
              android:layout_centerVertical="true"
              android:layout_marginLeft="15dp"

              />
          <TextView
              android:id="@+id/hide_display_content"
              android:layout_toRightOf="@+id/hide_display_icon"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="隐藏这条悬赏                                  "
              android:textColor="#333333"
              android:textSize="16sp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="15dp"/>
      </RelativeLayout>
</LinearLayout>