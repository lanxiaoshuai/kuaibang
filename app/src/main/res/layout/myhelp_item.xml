<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <com.witkey.witkeyhelp.widget.RoundImageView
            android:id="@+id/createUserHeadUrl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/systemmessagenone"
            app:type="circle" />
        <TextView
            android:id="@+id/replyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/createUserHeadUrl"
            android:text="长江七七七号"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/replytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/replyname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/createUserHeadUrl"

            android:text="2020-6-23"
            android:textColor="#ffb3b3b3"
            android:textSize="9sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/replyname">

            <TextView
                android:id="@+id/tv_mission_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="30元"
                android:textColor="@color/shape_org"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/price_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_mission_money"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tv_mission_money"
                android:drawableLeft="@mipmap/renminbi" />

            <TextView
                android:id="@+id/price_image_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tv_mission_money"
                android:drawableLeft="@mipmap/home_diamond"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <com.witkey.witkeyhelp.widget.RoundImageView
            android:id="@+id/mission_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/release_task_icon"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/mission_photo"
            android:orientation="vertical">


            <TextView
                android:id="@+id/helpcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="请问有没有太原理工大学学长学姐有物理与光电工程学院集成电路专硕的真..."
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:text="进行中"
                android:textColor="@color/shape_org"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="#F0F0F0" />
</LinearLayout>