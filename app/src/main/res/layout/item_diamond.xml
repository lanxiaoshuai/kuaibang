<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:orientation="horizontal"

        >

        <com.witkey.witkeyhelp.widget.RoundImageViewTwo
            android:id="@+id/iv_avatar"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"

            app:type="round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="dsadasdasda"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity=""
                android:maxLines="1"
                android:singleLine="true"
                android:text="sadsdasdasdasdasdasdasdasdaserwrwewedasdasdasdasdasdasd"
                android:textColor="#ff666666"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/notice_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="6dp"
                    android:text="0.0"
                    android:textColor="#ffff6f00"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/notice_price_fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/notice_price"
                    android:text="ï¿¥"
                    android:textColor="#ffff6f00"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ImageView
                   android:visibility="gone"
                    android:id="@+id/notice_price_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="17dp"
                    android:layout_toLeftOf="@+id/notice_price"
                    android:src="@mipmap/home_diamond"

                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>