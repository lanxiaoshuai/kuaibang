<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"

        >

        <ImageView
            android:id="@+id/launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:paddingLeft="40dp"
            android:src="@mipmap/green_image" />

        <TextView
            android:id="@+id/launch_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_toRightOf="@+id/launch"
            android:text="发起提现申请"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/green_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/launch"
            android:layout_marginLeft="45.5dp"
            android:src="@mipmap/green_line" />

        <ImageView

            android:id="@+id/in_processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/green_line"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/in_processing" />

        <TextView
            android:id="@+id/processing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/launch_text"
            android:layout_below="@+id/launch_text"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/in_processing"
            android:text="处理中"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/paymentdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/launch_text"
            android:layout_below="@+id/processing_text"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/in_processing"
            android:text="预计03-01 19：27前到账"
            android:textColor="#999999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/gray_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_processing"
            android:layout_marginLeft="45.5dp"
            android:src="@mipmap/gray_line" />

        <ImageView
              android:id="@+id/an_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gray_line"
            android:layout_marginLeft="39dp"
            android:src="@mipmap/ash_img" />

        <TextView
            android:id="@+id/successfully"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/launch_text"
            android:layout_below="@+id/paymentdate"
            android:layout_marginTop="35.5dp"
            android:layout_toRightOf="@+id/in_processing"
            android:text="到账成功"
            android:textColor="#999999"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="提现金额"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/cashWithdrawalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="￥100"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="到账账户"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/paidbankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="￥100"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="服务费"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/serviceCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="￥100"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/confirmationWithdrawals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/miaobian_tixian"
            android:paddingBottom="12dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="12dp"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="#ff45c663"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>