<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/miaobian_biankuan"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/colose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/close_dialog" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@mipmap/cannot_relieved" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="保证金任务不可解除！"
        android:textColor="#FF333333"
        android:gravity="center"
        android:textSize="18sp" />


    <LinearLayout

        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="46dp"

        android:layout_marginRight="46dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_home_xuanzhong"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:paddingTop="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好的，知道了"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/withdraw"
         android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="举报"
        android:textColor="#FF999999"
        android:textSize="12sp"
        android:layout_marginBottom="22dp"/>

</LinearLayout>