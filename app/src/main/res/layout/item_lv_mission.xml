<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mission_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_stroke"
            android:padding="4dp"
            android:text="紧急求助"
            android:textColor="@color/item_mission_red" />

        <TextView
            android:id="@+id/tv_mission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="任务名称" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_mission_content"
        android:layout_below="@+id/ll"
        android:text="测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_mission_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="30元"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_mission_money"
        android:textColor="@color/item_mission_red"
        android:layout_below="@id/tv_mission_content"
        android:textSize="16sp"/>
</RelativeLayout>