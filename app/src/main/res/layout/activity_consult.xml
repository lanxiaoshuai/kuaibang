<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/include_title_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_toolbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4.5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_home_jianbian"
            android:text="立即发布"
            android:textColor="@color/white"


            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@+id/include_title_by"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_title_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_primary_ver_line"
                    android:drawablePadding="5dp"
                    android:text="咨询内容"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />
                <!--android:background="@drawable/shape_gray_stroke"-->

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/tv_title_content"-->
                <!--android:layout_marginTop="8dp"-->

                <!--android:focusable="true"-->
                <!--android:focusableInTouchMode="true"-->
                <!--android:padding="5dp">-->

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="输入您的问题"
                    android:lineSpacingExtra="5dp"
                    android:minLines="9"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_content"


                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/photolist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_pic"

                        />


                    <ImageView
                        android:id="@+id/expression"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/shixin_delete"
                        android:visibility="gone" />


                </RelativeLayout>

                <!--<TextView-->
                <!--android:id="@+id/btn_add_pic"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_below="@+id/et_content"-->
                <!--android:background="@drawable/shape_primary_solid"-->
                <!--android:padding="5dp"-->
                <!--android:text="添加图片"-->
                <!--android:textColor="@color/white" />-->
            </RelativeLayout>
            <!--</RelativeLayout>-->

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_gray_home"
                android:drawableLeft="@mipmap/dingwei_left"
                android:drawableRight="@mipmap/dingwei_right"
                android:drawablePadding="10dp"
                android:paddingLeft="11dp"
                android:paddingTop="5dp"
                android:paddingRight="11dp"
                android:paddingBottom="5dp"
                android:text="万里长城好汉坡"
                android:textColor="#ff666666"
                android:textSize="13sp" />

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="@color/white"-->
            <!--android:padding="8dp">-->

            <TextView
                android:id="@+id/tv_title_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_primary_ver_line"
                android:drawablePadding="5dp"
                android:text="悬赏金额"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:id="@+id/addcircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/select_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/seletecicle_icon"
                    android:drawablePadding="11dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="16dp"
                    android:text="选择圈子"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/select_circle"
                    android:drawableRight="@mipmap/arrow_light"
                    android:drawablePadding="13dp"
                    android:gravity="right"
                    android:hint="请选择您发布的圈子（多选）"
                    android:paddingTop="13dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="16dp"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_dynamic"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE" />

            <com.donkingliang.labels.LabelsView
                android:id="@+id/cloud_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp"
                app:labelBackground="@drawable/select_home_lable"
                app:labelTextColor="@color/white"
                app:labelTextPaddingBottom="4dp"
                app:labelTextPaddingTop="4dp"
                app:labelTextSize="12sp"
                app:wordMargin="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/dynamic_publishing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/reward_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/reward_amount_icon"
                        android:drawablePadding="11dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="16dp"
                        android:text="悬赏金额"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/reward_amount"
                        android:background="@null"
                        android:digits="0123456789"
                        android:drawableRight="@mipmap/arrow_light"
                        android:drawablePadding="13dp"
                        android:gravity="right"
                        android:hint="输入您的悬赏金额"
                        android:inputType="number"
                        android:lines="1"
                        android:paddingTop="13dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="16dp"
                        android:textSize="13sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EEEEEE" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <RadioGroup
                        android:id="@+id/rg_money_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp">

                        <RadioButton
                            android:id="@+id/rb_RMB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/select_home_back"
                            android:button="@null"
                            android:checked="true"
                            android:paddingLeft="14dp"
                            android:paddingTop="6dp"
                            android:paddingRight="14dp"
                            android:paddingBottom="6dp"
                            android:text="人民币"
                            android:textColor="@drawable/selector_text_color_home"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_diamonds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/select_home_back"
                            android:button="@null"
                            android:checked="false"
                            android:paddingLeft="20dp"
                            android:paddingTop="6dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="6dp"
                            android:text="钻石"
                            android:textColor="@drawable/selector_text_color_home"
                            android:textSize="12sp" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/consult_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:id="@+id/btn_open_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:visibility="gone">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/advanced_settings"
                    android:drawablePadding="11dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="16dp"
                    android:text="更多高级设置"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:drawableRight="@mipmap/arrow_light"

                    android:drawablePadding="13dp"
                    android:gravity="right"
                    android:paddingTop="13dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="16dp"
                    android:text="展开更多设置"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/dynamic_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/dynamic_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/reward_amount_icon"
                            android:drawablePadding="11dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="16dp"
                            android:text="悬赏金额"
                            android:textColor="#ff333333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/dynamic_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/dynamic_amount"
                            android:background="@null"
                            android:digits="0123456789"
                            android:drawableRight="@mipmap/arrow_light"
                            android:drawablePadding="13dp"
                            android:gravity="right"
                            android:hint="输入您的悬赏金额"
                            android:inputType="number"
                            android:lines="1"
                            android:paddingTop="13dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="16dp"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingBottom="5dp">

                        <RadioGroup
                            android:id="@+id/dynamic_money_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="15dp">

                            <RadioButton
                                android:id="@+id/dynamic_RMB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/select_home_back"
                                android:button="@null"
                                android:checked="true"
                                android:paddingLeft="14dp"
                                android:paddingTop="6dp"
                                android:paddingRight="14dp"
                                android:paddingBottom="6dp"
                                android:text="人民币"
                                android:textColor="@drawable/selector_text_color_home"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/dynamic_diamonds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/select_home_back"
                                android:button="@null"
                                android:checked="false"
                                android:paddingLeft="20dp"
                                android:paddingTop="6dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="6dp"
                                android:text="钻石"
                                android:textColor="@drawable/selector_text_color_home"
                                android:textSize="12sp" />
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rewardtohelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp">

                        <TextView
                            android:id="@+id/lianxidianhua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ellipse_icon"
                            android:drawablePadding="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="16dp"
                            android:text="联系电话"
                            android:textColor="#ff333333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/lianxidianhua"
                            android:background="@null"
                            android:digits="0123456789"

                            android:gravity="right"
                            android:hint="输入您的联系电话（选填）"
                            android:inputType="number"
                            android:lines="1"
                            android:paddingTop="13dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="16dp"
                            android:textSize="13sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ellipse_icon"
                            android:drawablePadding="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="16dp"
