                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="13dp"

                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <RadioButton
                                android:id="@+id/rb_isPosition_true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="2"
                                android:background="@drawable/select_home_back"
                                android:button="@null"
                                android:checked="true"
                                android:paddingLeft="8dp"
                                android:paddingTop="6dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="6dp"
                                android:text="附近的人"
                                android:textColor="@drawable/selector_text_color_home"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/rb_isPosition_false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/select_home_back"
                                android:button="@null"
                                android:checked="false"
                                android:paddingLeft="8dp"
                                android:paddingTop="6dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="6dp"
                                android:text="不限地域"
                                android:textColor="@drawable/selector_text_color_home"
                                android:textSize="12sp" />
                        </RadioGroup>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"

                            android:drawableLeft="@mipmap/ellipse_icon"
                            android:drawablePadding="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="16dp"
                            android:text="是否需要帮忙者缴纳保证金"
                            android:textColor="#ff333333"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/rg_isNeedBond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="13dp"

                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <RadioButton
                                android:id="@+id/rb_isNeedBond_true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="2"
                                android:background="@drawable/select_home_back"
                                android:button="@null"
                                android:checked="true"
                                android:paddingLeft="16dp"
                                android:paddingTop="6dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="6dp"
                                android:text="是"
                                android:textColor="@drawable/selector_text_color_home"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/rb_isNeedBond_false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/select_home_back"
                                android:button="@null"
                                android:checked="false"
                                android:paddingLeft="16dp"
                                android:paddingTop="6dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="6dp"
                                android:text="否"
                                android:textColor="@drawable/selector_text_color_home"
                                android:textSize="12sp" />
                        </RadioGroup>

                    </RelativeLayout>

                    <View
                        android:id="@+id/text_view_xian"

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />

                    <EditText
                        android:id="@+id/bond_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:hint="输入保证金金额 ￥：0.00"
                        android:inputType="number"
                        android:lines="1"
                        android:paddingTop="16dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="20dp"

                        android:textSize="13sp" />
                    >
                </LinearLayout>

