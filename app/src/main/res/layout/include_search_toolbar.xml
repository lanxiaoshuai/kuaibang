<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bar_bg_white">

    <RelativeLayout
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_search"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:onClick="goBack"
        android:paddingLeft="@dimen/toolbar_padding_left"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/toolbar_padding_right"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/ivBarLeft"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_local_icon"
            tools:targetApi="lollipop" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:hint="搜索感兴趣的任务"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/ic_mission_search"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_mission_search_bg"
        android:textColor="@color/bar_titie_white"
        android:textSize="16sp" />



</RelativeLayout>