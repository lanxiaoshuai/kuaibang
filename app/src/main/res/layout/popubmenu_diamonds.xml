<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"


    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/popub_diamods_menu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/release_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/release_icon"
            android:drawablePadding="12dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:text="发布"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_published"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/my_publishing"
            android:drawablePadding="12dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:text="我的发布"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_browse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/broesw_icon"
            android:drawablePadding="12dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:text="已浏览"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent" />
</LinearLayout>