<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/include_title"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:onClick="goBack"
            android:paddingLeft="@dimen/toolbar_padding_left"

            android:paddingRight="@dimen/toolbar_padding_right"
            >

            <ImageView
                android:id="@+id/ivBarLeft"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/ic_back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/include_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"


            android:textColor="@color/bar_titie_white"
            android:textSize="@dimen/include_title_text_size"
            android:textStyle="bold" />


        <LinearLayout

            android:id="@+id/ll_share"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/include_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:onClick="del"
            android:orientation="vertical"
            android:paddingTop="8dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:srcCompat="@mipmap/ic_share" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/include_title"
            android:layout_marginTop="8dp"
            android:background="#EEEEEE" />
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">

                            <com.witkey.witkeyhelp.widget.RoundImageView
                                android:id="@+id/postavatar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="centerCrop"

                                app:type="circle" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/publisher_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text=""
                                    android:textColor="@color/price_bli_color"
                                    android:textSize="15sp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView

                                        android:id="@+id/release_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text=""
                                        android:textColor="#b2b2b2"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:id="@+id/tv_chat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_toRightOf="@+id/release_time"
                                        android:drawableLeft="@mipmap/release_location"
                                        android:drawablePadding="3dp"
                                        android:text=""
                                        android:textColor="#ffb2b2b2"
                                        android:textSize="10sp" />


                                </RelativeLayout>


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"

                                    android:text=""
                                    android:textColor="@color/shape_org"
                                    android:textSize="20sp" />


                                <TextView
                                    android:id="@+id/price_left_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/price"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_toLeftOf="@+id/price"
                                    android:drawableLeft="@mipmap/renminbi"
                                    android:visibility="gone"

                                    />

                                <TextView
                                    android:id="@+id/price_image_diamond"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/price"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_toLeftOf="@+id/price"
                                    android:drawableLeft="@mipmap/home_diamond"
                                    android:visibility="gone" />

                            </RelativeLayout>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"

                            android:layout_marginTop="18dp"
                            android:background="#EEEEEE"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <FrameLayout
                                android:id="@+id/cover"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp">

                                <!--                        <TextView-->

                                <!--                            android:id="@+id/tv_mission_type"-->
                                <!--                            android:layout_width="wrap_content"-->
                                <!--                            android:layout_height="wrap_content"-->
                                <!--                            android:layout_marginTop="2dp"-->
                                <!--                            android:background="@drawable/shape_org_stroke"-->
                                <!--                            android:ellipsize="end"-->
                                <!--                            android:paddingBottom="2dp"-->
                                <!--                            android:paddingLeft="5dp"-->
                                <!--                            android:paddingRight="5dp"-->
                                <!--                            android:paddingTop="2dp"-->
                                <!--                            android:text=""-->
                                <!--                            android:textColor="@color/white"-->
                                <!--                            android:textSize="10sp" />-->

                                <TextView
                                    android:id="@+id/et_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="3dp"
                                    android:text=""
                                    android:textColor="@color/price_bli_color"
                                    android:textSize="15sp" />
                            </FrameLayout>


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/photolist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cover"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginTop="18dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/bond_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需缴纳保证金（元）"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="无"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/bond_line"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#EEEEEE"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/telephone_dial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:background="@color/white"

                        android:paddingLeft="15dp"

                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系电话"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/contact_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="无"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/telephone_dial_line"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#EEEEEE"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/reward_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="接单人"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="15034408862"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

            <LinearLayout
                android:id="@+id/bouny_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回复"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/aaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:text=""
                            android:textColor="@color/shape_org"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/price_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/amount"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@+id/amount"
                            android:drawableLeft="@mipmap/renminbi"
                            android:visibility="gone"

                            />

                        <TextView
                            android:id="@+id/price_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/amount"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@+id/amount"
                            android:drawableLeft="@mipmap/home_diamond"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/allocated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignBottom="@+id/amount"
                            android:layout_marginRight="18dp"
                            android:layout_marginBottom="2dp"
                            android:layout_toLeftOf="@+id/amount"
                            android:text="待分配赏金：  "
                            android:textColor="#ffb3b3b3"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F0F0F0" />

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/detail_page_comment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.scwang.smart.refresh.layout.SmartRefreshLayout
                        android:id="@+id/refreshLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srlEnableRefresh="false">

                        <com.witkey.witkeyhelp.widget.CommentExpandableListView
                            android:id="@+id/detail_page_lv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none" />

                        <com.scwang.smart.refresh.footer.ClassicsFooter
                            android:id="@+id/classicsFooter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srlFinishDuration="0" />
                    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

                    <LinearLayout
                        android:id="@+id/hideshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_nodata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:scaleType="center"
                            android:src="@mipmap/nodata_icon" />

                        <TextView
                            android:id="@+id/nodata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="还没有回复，不要让酷友久等哦"
                            android:textColor="#808080"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/send_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/comment_bt_selector"
            android:paddingLeft="18dp"

            >

            <EditText
                android:id="@+id/detail_page_do_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="说点什么吧..."
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#B6B6B6"
                android:textSize="12sp" />
        </ScrollView>


        <TextView
            android:id="@+id/sendcomment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="发布"
            android:textColor="@color/defaultsendColor"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"


        >

        <LinearLayout
            android:id="@+id/task_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"

            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4.5dp"
                android:background="#CCCCCC" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@color/white"
                android:orientation="horizontal"

                android:paddingRight="15dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:adjustViewBounds="true"
                    android:drawableTop="@mipmap/ic_mission_detail_collect_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:drawableTop="@mipmap/ic_mission_detail_collect_icon"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="8dp"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableTop="@mipmap/reply_icon_default"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="6dp"
                    android:text="回复"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Button

                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gray_details_renl"
                    android:stateListAnimator="@null"
                    android:text="撤回任务"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/has_released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4.5dp"
                android:background="#CCCCCC" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chap_liaotian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:drawableTop="@mipmap/ic_mission_detail_collect_icon"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="6dp"
                        android:text="收藏"
                        android:textColor="#808080"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/tv_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"

                        android:drawableTop="@mipmap/reply_icon_default"
                        android:drawablePadding="2dp"
                        android:gravity="center"

                        android:paddingTop="5dp"
                        android:paddingBottom="6dp"
                        android:text="回复"
                        android:textColor="#808080"
                        android:textSize="13sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/task_relieving"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_gray_home_banyuan"
                    android:stateListAnimator="@null"
                    android:text="任务解除"
                    android:textColor="#05C471" />

                <Button
                    android:id="@+id/mission_accomplished"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_gray_jianbian_banyuan"
                    android:stateListAnimator="@null"
                    android:text="完成任务"
                    android:textColor="@color/white" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rewardall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4.5dp"
                android:background="#CCCCCC" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@color/white"
                android:orientation="horizontal"

                android:paddingRight="15dp">


                <TextView
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:adjustViewBounds="true"
                    android:drawableTop="@mipmap/ic_mission_detail_collect_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:drawableTop="@mipmap/ic_mission_detail_collect_icon"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="8dp"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/task_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableTop="@mipmap/reply_icon_default"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="6dp"
                    android:text="回复"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/tv_commitbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@drawable/shape_gray_home_jianbian"
                    android:stateListAnimator="@null"
                    android:text="立即接单"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/orders_relayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <LinearLayout
                    android:id="@+id/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/forward_png" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="转发"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/private_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/private_chat" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/forward"
                        android:text="回复"
                        android:textColor="#333333"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/immediately"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/collection_icon" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="收藏"
                        android:textColor="#333333"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>