<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/miaobian_biankuan"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/close_dialog" />

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@mipmap/submit_failed" />

    <TextView
        android:id="@+id/taskrelieving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="任务提交失败！"
        android:textColor="#FF333333"
        android:textSize="18sp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/reward_hall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="您的悬赏已重新发布到悬赏大厅"
        android:textColor="#999999"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="#FFDCDCDC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="失败原因："
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/eason_renwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="7dp"
        android:text="悬赏者未确认完成"
        android:textColor="#333333"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/spot_img"
        android:drawablePadding="8dp"/>


    <TextView
        android:id="@+id/reward_content"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:text="悬赏内容："
        android:textColor="#999999"
        android:textSize="14sp" />


    <TextView

        android:id="@+id/ways_releaseaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="7dp"
        android:text="· 协商解除"
        android:textColor="#333333"
        android:textSize="14sp"
        android:visibility="visible"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_gray_home_true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/wzdl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系悬赏者"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView

            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="举报, 联系客服"
            android:textColor="#FF999999"
            android:textSize="12sp"
            android:visibility="visible"
            />



    </LinearLayout>

    </LinearLayout>