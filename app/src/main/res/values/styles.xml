<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="ButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">25dp</item>
    </style>

    <style name="Toolbar.ExpandedTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_bar_title_expanded</item>
        <item name="android:textColor">@color/bar_titie_white</item>
    </style>

    <style name="Toolbar.CollapsedTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/include_title_text_size</item>
        <item name="android:textColor">@color/bar_titie_white</item>
    </style>

    <!-- 去掉dialog头部 -->
    <style name="ShareDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--不显示遮罩-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>
</resources>
